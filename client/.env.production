# Production Environment Variables for Hire Accel Client
# Domain: hireaccel.v-accel.ai

# API Configuration - Points to the domain, Nginx will proxy to backend
VITE_API_URL=https://hireaccel.in

# Application Configuration
VITE_APP_NAME=Hire Accel
VITE_APP_VERSION=1.0.0

# Environment
VITE_NODE_ENV=production

# Domain Configuration
VITE_DOMAIN=hireaccel.in
VITE_APP_URL=https://hireaccel.in

# Security Configuration
VITE_SECURE_COOKIES=true
VITE_ENABLE_HTTPS=true

# Features Configuration
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# UI Configuration
VITE_THEME=light
VITE_DEFAULT_LANGUAGE=en
VITE_TIMEZONE=UTC

# Performance Configuration
VITE_ENABLE_PWA=false
VITE_ENABLE_SERVICE_WORKER=false

# Build Configuration
GENERATE_SOURCEMAP=false
VITE_BUILD_ANALYZE=false

# Support Configuration
VITE_SUPPORT_EMAIL=support@v-accel.ai
VITE_COMPANY_NAME=V-Accel Solutions