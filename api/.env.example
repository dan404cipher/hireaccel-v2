# Server Configuration
PORT=3002
NODE_ENV=development

# Database Configuration
# MongoDB Atlas Configuration
# MONGO_URI=mongodb+srv://localhost:27017/hireaccel?retryWrites=true&w=majority
# Local MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/hireaccel

# File Upload Configuration
UPLOADS_PATH=./uploads
MAX_FILE_SIZE_MB=10
MAX_IMAGE_SIZE_MB=2

# JWT Configuration
JWT_ACCESS_SECRET=your_super_secure_access_secret_change_in_production_12345678901234567890
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_change_in_production_12345678901234567890
JWT_ACCESS_TTL=1h
JWT_REFRESH_TTL=7d

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100


CSRF_ENABLED=false
CSRF_COOKIE_NAME=XSRF-TOKEN
CSRF_HEADER_NAME=X-CSRF-Token

# CORS Configuration  
# Add any dev ports you use (e.g., Vite may bump to 5174)
CORS_ORIGIN=http://localhost:8080,http://localhost:5173,http://localhost:5174,http://localhost:3002

# Logging
LOG_LEVEL=info

# API Documentation
API_DOCS_ENABLED=true

# Security
BCRYPT_ROUNDS=12

# Testing/Development Features
