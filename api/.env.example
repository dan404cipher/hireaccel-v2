# Server Configuration
PORT=3002
NODE_ENV=development

# Database Configuration
# MongoDB Atlas Configuration
# MONGO_URI=mongodb+srv://localhost:27017/hireaccel?retryWrites=true&w=majority
# Local MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/hireaccel

# File Upload Configuration
UPLOADS_PATH=./uploads
MAX_FILE_SIZE_MB=10
MAX_IMAGE_SIZE_MB=2

# JWT Configuration
JWT_ACCESS_SECRET=your_super_secure_access_secret_change_in_production_12345678901234567890
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_change_in_production_12345678901234567890
JWT_ACCESS_TTL=1h
JWT_REFRESH_TTL=7d

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100


CSRF_ENABLED=false
CSRF_COOKIE_NAME=XSRF-TOKEN
CSRF_HEADER_NAME=X-CSRF-Token

# CORS Configuration  
# Add any dev ports you use (e.g., Vite may bump to 5174)
CORS_ORIGIN=http://localhost:8080,http://localhost:5173,http://localhost:5174,http://localhost:3002

# Logging
LOG_LEVEL=info

# API Documentation
API_DOCS_ENABLED=true

# Security
BCRYPT_ROUNDS=12

# Testing/Development Features
TEST_SMS=true  # Enable test SMS mode - uses 000000 as OTP. DISABLE IN PRODUCTION!

# SMS Provider Configuration
SMS_PROVIDER=twilio  # Options: 'twilio', 'aws-sns'

# Twilio Configuration (if SMS_PROVIDER=twilio)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# AWS SNS Configuration (if SMS_PROVIDER=aws-sns)
# AWS_REGION=ap-south-1
# AWS_ACCESS_KEY_ID=your_aws_access_key_id
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# AWS_SNS_SENDER_ID=HireAccel

# Email Configuration
EMAIL_USER=XXXX@v-accel.ai
EMAIL_PASS=XXXXX
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Google Sheets Configuration
GOOGLE_SHEETS_ID=
GOOGLE_SHEETS_CREDENTIALS=

OPENAI_API_KEY=sk-proj

VITE_CLARITY_ID=your_project_id
