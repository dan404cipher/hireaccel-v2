{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "dist",
    "node_modules",
    ".git",
    "coverage"
  ],
  "exec": "node -r @swc-node/register -r tsconfig-paths/register src/server.ts",
  "env": {
    "NODE_ENV": "development",
    "SWC_NODE_PROJECT": "./tsconfig.json"
  },
  "delay": 0,
  "verbose": false,
  "restartable": "rs",
  "events": {
    "restart": "echo '\nRestarting server...\n'"
  }
}